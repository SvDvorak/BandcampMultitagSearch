{
	"manifest_version": 2,

	"name": "Camp Explorer",
	"short_name": "CampExplorer",
	"description": "A Bandcamp search tool",
	"version": "2.1.0",
	"author": "Andreas Wilcox",

	"web_accessible_resources": [
	    "fonts/*.*",
	    "octicons/*.*"
	],
	"browser_action": {
		"default_icon": "icon19.png",
		"default_popup": "popup.html",
		"default_title": "Camp Explorer"
	},
	"icons": {
		"19": "icon19.png",
      	"128": "icon128.png"
  	},
	"permissions": [
		"storage",
		"https://campexplorer.io/",
		"http://bandcamp.com/",
		"https://bandcamp.com/",
		"https://*.bcbits.com/"
	]
}
