{
	"manifest_version": 2,

	"name": "Bandcamp Tag Search",
	"short_name": "TagSearch",
	"description": "Allows you to search Bandcamp for albums with multiple tags",
	"version": "1.0.3",
	"author": "Andreas Wilcox",

	"web_accessible_resources": [
	    "fonts/*.*",
	    "octicons/*.*"
	],
	"browser_action": {
		"default_icon": "icon19.png",
		"default_popup": "popup.html",
		"default_title": "Bandcamp tag search"
	},
	"icons": {
		"19": "icon19.png",
      	"128": "icon128.png"
  	},
	"permissions": [
		"storage",
		"http://bandcamptagsearch.tech",
		"http://bandcamp.com/",
		"https://bandcamp.com/",
		"https://*.bcbits.com/"
	]
}
