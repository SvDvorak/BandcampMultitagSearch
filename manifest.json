{
	"manifest_version": 2,

	"name": "Bandcamp tag search",
	"description": "This extension allows you to search Bandcamp for albums with multiple tags",
	"version": "1.0",

	"web_accessible_resources": [
	    "fonts/*.*"
	],

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Bandcamp tag search"
	},
	"permissions": [
		"storage",
		"http://bandcamp.com/",
		"https://bandcamp.com/",
		"https://*.bcbits.com/"
	]
}